<% require "barby/barcode/code_128" %>
<% require "barby/outputter/svg_outputter" %>

<% item_prefix = 'item__' %>
<% barcode_width = 200 %>
<% barcode_height = 50 %>

<meta charset="utf-8">
<%= wicked_pdf_stylesheet_link_tag "documents" %>

<style type="text/css">
  .logo {
    vertical-align: top;
    width: 20px;
    line-height: 50px;
    height: 50px;
    margin-top: 10px;
    margin-right: 10px;
    display: inline-block;
  }
  .image {
    max-width: 50px;
    max-height: 50px;
  }
  .foo {
    border: 8px;
    width: 100%;
    margin-top: 70px;
  }
  .border_bottom td {
    border-bottom: 1px solid gray !important;
  }
  table {
    border-collapse: collapse;
  }

</style>

<div class="document">
<font size="7">Getränkepreisliste</font><br>
  <hr />
  <table class="foo">
  <thead>
    <tr class="border_bottom">
      <td width="10%"></td>
      <td width="50%"><font size="5">Getränk</font></td>
      <td width="20%"><font size="5">Preis</font></td>
      <td width="20%"><font size="5">Preis/Liter</font></td>
    </tr>
  </thead>
  <tbody>
    <% @items.each_with_index do |item, index| %>
      <% if index%2 == 0 %>
      <tr>
      <% else %>
      <tr class="border_bottom">
      <% end %>
        <div>
          <td>
            <div class="logo">
              <%= wicked_pdf_image_tag_for_public item.image.url(:small), :class=>"image" %>
            </div>
          </td>
          <td>
            <font size="5"><%= item.name %></font>
          </td>
          <td>
            <font size="5"><%= number_to_currency(item.external_price) %></font>
          </td>
          <td>
            <font size="5"><%= number_to_currency(item.price/item.capacity) %></font>
          </td>
        </div>
      </tr>
    <% end %>
  </tbody>
</table>


  

</div>
